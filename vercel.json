{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "API_URL": "https://groupomania-dasyx-org.vercel.app"
  },
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://www.groupomania.fr",
      "permanent": true
    }
  ]
}
